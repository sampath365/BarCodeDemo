<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BarCodeDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BarCodeDemo"
    Title="BarCodeDemo"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:SearchPage}"
        Route="MainPage" />
    <ShellContent ContentTemplate="{DataTemplate local:BarcodeScanPage}" Route="barcodeScanPage" />
    <ShellContent ContentTemplate="{DataTemplate local:MovieDetailPage}" Route="MovieDetailPage" />
</Shell>
